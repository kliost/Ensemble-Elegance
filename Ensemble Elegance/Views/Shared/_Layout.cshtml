
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ensemble_Elegance</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Ensemble_Elegance.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="../Views/Shared/_Layout.cshtml.css" />
    
    

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between ali">
                    <nav>
                        <div class="logo">
                            <img src="/ico/logo.png" alt="Логотип">
                        </div>
                        <ul class="nav-links">
                            <li><a asp-controller="Home" asp-action="Index">Головна</a></li>
                            <li><a asp-controller="Home" asp-action="Catalogue">Каталог</a></li>
                            <li><a asp-controller="Home" asp-action="About">Про нас</a></li>
                            <li><a asp-controller="Home" asp-action="Contacts">Контакти</a></li>
                        </ul>
                        <ul class="user-links">
                            @if (User.Identity != null)
                            {
                                @if (!User.Identity.IsAuthenticated)
                                {
                                    <li><a asp-controller="Account" asp-action="Register">Реєстрація</a></li>
                                    <li><a asp-controller="Account" asp-action="Login">Авторизація</a></li>
                                }
                                <li><a asp-controller="Cart" asp-action="Cart">Корзина</a></li>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <form method="post" asp-controller="Account" asp-action="Logout">
                                    <li><button type="submit" > Вихід</button></li>
                                    </form>
                                }
                                @if (User.IsInRole("Admin"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="AdminPage">Admin</a>
                                    </li>
                                }
                            }
                        </ul>
                        
                    </nav>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
            
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Ensemble_Elegance - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
