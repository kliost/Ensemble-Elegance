@model List<Ensemble_Elegance.Models.ProductModel>
@{
    Layout = "AdminLayout";
}


<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Title Image
            </th>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Price
            </th>
            <th>
                Category
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <th>
                    @item.Id
                </th>
                <th>
                    <img src="/images/@item.Id/@item.ImageFileName" class="card-img" />
                </th>
                <th>
                    @item.Name
                </th>
                <th>
                    @item.Description
                </th>
                <th>
                    @item.Price
                </th>
                <th>
                    
                </th>
                <th>
                    <a href="updateitem?id=@item.Id">Edit</a>
                    <a href="delete?id=@item.Id" onclick="return window.confirm('Are you shure?')">Delete</a>
                    
                </th>

            </tr>
        }

    </tbody>
</table>
