@model List<Ensemble_Elegance.Models.ProductModel>;
@using System.Text.Json;

<head>
    <link rel="stylesheet" href="/css/ProductList.css" />
    <script src="/js/ProductList.js"></script>
</head>



<body>
    <h1>Список товарів</h1>

    <div id="product-list">
        @foreach (var product in Model)
        {
            <div class="product">
                <img src="/images/@product.Id/@product.ImageFileName" alt="Зображення товару">
                <div class="product-details">
                    <h3>@product.Name</h3>
                    <p>ID: @product.Id</p>
                    <p>@product.Description</p>
                    <p>Ціна: @product.Price грн</p>
                    @{
                        List<string> categories = JsonSerializer.Deserialize<List<string>>(product.CategoriesJson);
                    }
                    <p>Категорії: @string.Join(", ", categories)</p>
                </div>
                <div class="product-actions">
                    <button class="edit-button">Редагувати</button>
                    <button class="delete-button">Видалити</button>
                </div>
            </div>
        }
    </div>

    <a href="addnewproduct">Додати</a>  
</body>
